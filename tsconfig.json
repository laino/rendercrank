{
  "include": [
    "lib/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "examples",
    "node_modules",
    "**/node_modules/*"
  ],
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "build/src",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "downlevelIteration": true
  }
}
