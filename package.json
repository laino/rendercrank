{
  "name": "rendercrank",
  "version": "1.0.0",
  "description": "Unopinionated 2D WebGL Renderer",
  "main": "index.js",
  "repository": "https://github.com/laino/rendercrank",
  "author": "Nils Kuhnhenn",
  "license": "MIT",
  "scripts": {
      "watch": "NODE_ENV=development yarn webpack --watch",
      "build": "yarn build-types && yarn build-webpack && yarn build-examples",
      "build-webpack": "NODE_ENV=production yarn webpack && NODE_ENV=development yarn webpack",
      "build-types": "yarn tsc --declaration --emitDeclarationOnly --outFile index.js",
      "build-examples": "tsc --build examples/tsconfig.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0"
  }
}
